<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:UdemyDeepLearningX.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="UdemyDeepLearningX.Views.MainView"
             x:DataType="vm:MainViewModel"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia">

	<StackPanel Width="800" Spacing="40" Margin="20">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="60">

			<StackPanel Orientation="Vertical" Spacing="20">
				<TextBlock Text="Training Data" HorizontalAlignment="Center"  />
				<Button Content="Randomize Training Data" Command="{Binding RandomizeTrainingDataCommand}" />
			</StackPanel>

			<StackPanel Orientation="Vertical" Spacing="20">
				<TextBlock Text="DeepLearning Model" HorizontalAlignment="Center" />
				<Button Content="Run Regression ANN" Command="{Binding RunModelCommand}" />
			</StackPanel>

			<StackPanel Orientation="Vertical" Spacing="20">
				<TextBlock Text="Loss / Cost" HorizontalAlignment="Center" />
				<StackPanel Height="30" Orientation="Horizontal" VerticalAlignment="Center">
					<TextBlock VerticalAlignment="Center" Text="MSE: " Foreground="PaleVioletRed"/>
					<TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding CalculatedMSE}" Foreground="PaleVioletRed"/>
				</StackPanel>
			</StackPanel>
		</StackPanel>

		<lvc:CartesianChart VerticalAlignment="Bottom" Width="800" Height="600" Series="{Binding Series}"
                            XAxes="{Binding XAxes}" YAxes="{Binding YAxes}"  />
	</StackPanel>
</UserControl>