<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:UdemyDeepLearningX.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="UdemyDeepLearningX.Views.MainView"
             x:DataType="vm:MainViewModel"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia">

	<StackPanel Margin="20" Width="800">
		<StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="20" >
			<Button Content="Randomize Training Data" Command="{Binding RandomizeTrainingDataCommand}" />
			<Button Content="Run Regression ANN" Command="{Binding RunModelCommand}" />

			<StackPanel Orientation="Horizontal" Width="150">
				<TextBlock VerticalAlignment="Center" Text="MSE: " Foreground="PaleVioletRed"/>
				<TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding CalculatedMSE}" Foreground="PaleVioletRed"/>
			</StackPanel>
		</StackPanel>
		<lvc:CartesianChart VerticalAlignment="Bottom" Width="800" Height="600" Series="{Binding Series}"
                            XAxes="{Binding XAxes}" YAxes="{Binding YAxes}"  />
	</StackPanel>

</UserControl>